{
    "name": "gestion-academica/app",
    "description": "Sistema de gestión académica con PHP, PostgreSQL y Docker",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Desarrollador",
            "email": "desarrollador@ejemplo.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "docker-compose up -d",
        "stop": "docker-compose down",
        "logs": "docker-compose logs -f"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
